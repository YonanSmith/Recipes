<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyRecipes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryVariant">@color/colorDark</item>
        <item name="colorOnPrimary">@color/colorDark</item>
        <item name="colorOnBackground">@color/colorDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue4</item>
        <item name="colorSecondaryVariant">@color/blue5</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorDark</item>
    </style>
</resources>